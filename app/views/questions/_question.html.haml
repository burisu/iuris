.item.question
  =logo_tag(avatar_url(question.author, :size => 48))
  %h3.title=link_to(beautify(question.name), question_url(question))
  =labels_of(question)
  .info
    %span PosÃ©e par
    =link_to(question.author.full_name, question.author, :class => "author")
    =on(question.created_at)
    %span=("("+link_to_if(question.answers.count > 0, "labels.x_answers".t(:count=>question.answers.count), question_url(question)) { |name| name}+", "+link_to_if(question.comments.count > 0, "labels.x_comments".t(:count=>question.comments.count), question_url(question)) { |name| name }+")").html_safe
  .end
